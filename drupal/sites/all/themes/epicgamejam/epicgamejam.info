name = Epic Game Jam
description = A Bootstrap Sub-theme.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[header_zone]    = 'Header Zone'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content_top] = 'Content Top'
regions[content]        = 'Content'
regions[content_bottom] = 'Content Bottom'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = build/css/vendors.min.css
stylesheets[all][] = build/css/main.css

scripts[] = build/js/vendors.min.js
scripts[] = build/js/main.min.js

exclude[css][] = 'sites/all/modules/contrib/views/css/views.css'
exclude[css][] = 'sites/all/modules/field/theme/field.css'
exclude[css][] = 'sites/all/modules/contrib/views/css/views.css'
exclude[js][] = 'sites/all/themes/bootstrap/js/bootstrap.js'


; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''
